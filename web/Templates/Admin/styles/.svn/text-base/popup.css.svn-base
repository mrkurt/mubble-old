body
{
    margin: 0px !important;
}
h1
{
    font-size: 140%;
    margin: 10px !important;
    margin-left: 50px !important;
}
div.MediaSourceSelection
{
    /*height: 119px;*/
    padding-bottom: 4px;
    border: 1px solid #cccccc;
    margin-bottom: 10px;
    width: 400px;
    margin-left: 50px;
    margin-right: 50px;
    background-color: White;
}
div.MediaSourceSelection h2
{
    margin: 0px;
    background-image: url(../Images/tab_back.gif);
    background-position: left bottom;
    background-repeat: repeat-x;
    color: white;
    font-size: 100%;
    padding: 2px 3px 2px 3px;
}
p.FormField
{
    margin: 10px;   
}
p.FormField label
{
    padding-top: 3px;
    display: block;
    float: left;
    width: 100px;
}
p.FormField input.TextBox
{
    width: 250px;
}
p.FormField select
{
    width: 250px;
}
p.Button
{
    margin-right: 5px;
    text-align: right;   
}

table.MediaListing
{
    width: 450px !important;
    margin-left: 25px;
    border: 1px solid #cccccc;
}

table.ImageEditor
{
    width: 450px !important;
    margin-left: 25px;
    border: 1px solid #cccccc;
    border-collapse: collapse;
    margin-top: 25px;
}
table.ImageEditor td.Preview
{
    border: 1px solid #cccccc;
}
table.ImageEditor th
{
    border: 1px solid #cccccc;
    background-color: #dddddd;
    color: #000000;
}