<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>{$lang_snippets_title}</title>
	<script language="javascript" type="text/javascript" src="../../tiny_mce_popup.js"></script>
	<script language="javascript" type="text/javascript" src="jscripts/functions.js"></script>
	<base target="_self" />
</head>
<body onload="tinyMCEPopup.executeOnLoad('init();');"> 
	<form onsubmit="insertAction();return false;" style="width: 400px;">
		<h3>{$lang_snippets_title}</h3>

        <table style="width: 430px;">
            <tr id="snippetlistrow"><td><strong>{$lang_snippets_snippets}:</strong></td><td id="snippetlistcontainer">&nbsp;</td></tr>
            <tr><td colspan="2">
            <strong>{$lang_snippets_preview}</strong><br />
            <iframe style="width: 430px; height: 300px; border: 1px solid #cccccc;" id="snippetpreview" src="../../blank.htm"></iframe>
            </td></tr>
        </table>
		<div class="mceActionPanel" style="width: 430px;">
			<div style="float: left">
				<input type="button" id="insert" name="insert" value="{$lang_insert}" onclick="insertAction();" />
			</div>

			<div style="float: right">
				<input type="button" id="cancel" name="cancel" value="{$lang_cancel}" onclick="cancelAction();" />
			</div>
		</div>        
	</form>
</body> 
</html> 
